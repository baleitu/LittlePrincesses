<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <TextView
        android:id="@+id/signIn"
        android:text="Log In"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="30dp"
        />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signIn"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/signIn"
        android:text="Account: "
        android:textSize="20sp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/signIn"
        android:text="Password: "
        android:textSize="20sp" />

    <EditText
        android:id="@+id/accountInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_alignBottom="@+id/account"
        android:ems="20"
        android:layout_toEndOf="@+id/signIn" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/password"
        android:ems="20"
        android:layout_toEndOf="@+id/signIn" />

    <Button
        android:id="@+id/loginB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:text="Buyer Login"
        />

    <Button
        android:id="@+id/loginS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/passwordInput"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:text="Seller Login"
        />

    <Button
        android:id="@+id/BCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/loginB"
        android:layout_marginTop="20dp"
        android:text="Create as Buyer"
        />

    <Button
        android:id="@+id/SCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/passwordInput"
        android:layout_below="@+id/loginS"
        android:layout_marginTop="20dp"
        android:text="Create as Seller"
        />

</RelativeLayout>
