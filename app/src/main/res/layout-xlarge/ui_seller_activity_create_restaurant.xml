<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.michelle.littleprincesses.ui.seller.CreateRestaurant">

    <TextView android:id="@+id/title_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/title_create_restaurant" />

    <TextView android:id="@+id/info_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_create_restaurant"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/info_create_restaurant" />

    <TextView android:id="@+id/title_name_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_create_restaurant"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/title_name_create_menu" />

    <EditText android:id="@+id/name_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info_create_restaurant"
        android:layout_toRightOf="@+id/title_name_create_restaurant"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:hint="@string/name_create_restaurant" />

    <TextView android:id="@+id/title_address_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_name_create_restaurant"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/title_address_create_restaurant" />

    <EditText android:id="@+id/address_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_name_create_restaurant"
        android:layout_toRightOf="@+id/title_address_create_restaurant"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:hint="@string/address_create_restaurant"/>

    <TextView android:id="@+id/title_category_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_address_create_restaurant"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="@string/title_category_create_restaurant" />

    <EditText android:id="@+id/category_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_address_create_restaurant"
        android:layout_toRightOf="@+id/title_category_create_restaurant"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:hint="@string/category_create_restaurant"/>

    <Button android:id="@+id/submit_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/submit_create_restaurant"
        android:layout_alignTop="@+id/cancel_create_restaurant"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button android:id="@+id/cancel_create_restaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/submit_create_restaurant"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textSize="20dip"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/cancel_create_restaurant" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload_image_create_restaurant"
        android:id="@+id/upload_image_create_restaurant"
        android:layout_alignTop="@+id/cancel_create_restaurant"
        android:layout_alignRight="@+id/imageView_create_restaurant"
        android:layout_alignEnd="@+id/imageView_create_restaurant" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView_create_restaurant"
        android:layout_above="@+id/upload_image_create_restaurant"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/category_create_restaurant" />


</RelativeLayout>
