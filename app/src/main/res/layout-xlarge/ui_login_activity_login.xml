<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".LoginActivity">

    <TextView
        android:id="@+id/signIn"
        android:text="@string/login_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signIn"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/signIn"
        android:text="@string/login_account"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/account"
        android:layout_marginTop="50dp"
        android:layout_alignLeft="@+id/signIn"
        android:text="@string/login_password"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/accountInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:layout_alignBottom="@+id/account"
        android:ems="20"
        android:layout_toEndOf="@+id/BCreate"
        android:layout_toRightOf="@+id/BCreate" />

    <EditText
        android:id="@+id/passwordInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_alignBottom="@+id/password"
        android:ems="20"
        android:layout_toEndOf="@+id/signIn"
        android:layout_alignLeft="@+id/accountInput"
        android:layout_alignStart="@+id/accountInput" />

    <Button
        android:id="@+id/loginB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:text="@string/login_loginB"
        />

    <Button
        android:id="@+id/loginS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/passwordInput"
        android:layout_below="@+id/password"
        android:layout_marginTop="50dp"
        android:text="@string/login_loginS"
        />

    <Button
        android:id="@+id/BCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password"
        android:layout_below="@+id/loginB"
        android:layout_marginTop="20dp"
        android:text="@string/login_BCreate"
        />

    <Button
        android:id="@+id/SCreate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/passwordInput"
        android:layout_below="@+id/loginS"
        android:layout_marginTop="20dp"
        android:text="@string/login_SCreate"
        />

</RelativeLayout>
